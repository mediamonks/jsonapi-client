{
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist"
  }
}
