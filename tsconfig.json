{
  "exclude": ["node_modules", "test", "examples", "**/*.spec.ts"],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["ES2019", "DOM"],
    "target": "ES2019",
    "module": "es6",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
